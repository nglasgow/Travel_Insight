<% @title = "Taiwan - Posts - Travel Insight" %>
<h2><%= @post.title %></h2>

<ul id='comments'>
  <% @post.comments.each do |comment| %>
    <li>
      #<%= comment.id %> -
      <%= link_to comment.title, [@post, comment] %>
    </li>
  <% end %>
</ul>

<%= link_to "New Comment", new_post_comment_path(@post) %>

<%= link_to "Edit Post", edit_post_path(@post) %>

<%= link_to "Delete Post",
 post_path(@post),
 :method => :delete,
 :confirm => "Are you sure you want to delete this post?" %>
