<div id='comment'>
  <h2><%= @comment.title %></h2>

  <%= link_to "Edit Comment", [:edit, @post, @comment] %>

  <%= link_to "Delete Comment", [@post, @comment],
    :method => :delete,
    :confirm => "Are you sure you want to delete this comment?" %>

  <%= simple_format(@comment.description) %>
</div>
